doctype html
html
  head
    meta(charset='utf-8')
    meta(name="viewport"
         content="initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width"
         )
    title Tyrion Merchants

    link(href='lib/ionic/css/ionic.css' rel='stylesheet')
    script(src='lib/ionic/js/ionic.bundle.js')

    link(href='css/ionic.app.css' rel='stylesheet')

    // Other app javascript here in a minute
    - var coreJs = ['app', 'config']
    each file in coreJs
      script(src='js/'+file+'.js')

    - var controllers = ['login', 'newOrders', 'currentOrders', 'pastOrders', 'orderDetails']
    each file in controllers
      script(src='js/controllers/'+file+'.js')

  body(ng-app="app" animation="slide-left-right-ios7")
    div
      div
        ion-nav-bar.bar-stable
          ion-nav-back-button.button-icon.icon.ion-ios-arrow-back Back
        ion-nav-view
