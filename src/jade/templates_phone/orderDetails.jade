ion-view(title='Order details' cache-view="false")
  ion-content(padding='false').has-header
    .list
      // Order header
      .item.item-divider
        .pull-right.calm.text-small {{ details.timestamp.$date | date }}
        | {{ details.order_number }}
      .item.text-center
        strong status: &nbsp
        | {{ details.status }}
      .item.tabs.tabs-icon-left(ng-if='details.status == "placed"')
        a.tab-item
          i.icon.ion-close
          | Cancel
        a.tab-item
          i.icon.ion-checkmark.balanced
          | Accept
      .item.tabs.tabs-icon-left(ng-if='details.status == "accepted"')
        a.tab-item.energized
          i.icon.ion-alert
          | Delay
        a.tab-item.balanced
          i.icon.ion-checkmark
          | Ready
        a.tab-item.positive
          i.icon.ion-paper-airplane
          | Deliver

      // Actual order
      .item.item-divider order

      .item(ng-repeat-start="item in order")
        span.quantity {{ item.quantity }}x
        span.badge {{ item.base_price | currency : "&#8377 " }}
        span {{ item.name }}
        span(ng-if='item.size') : {{ item.size }}
      .item(ng-repeat-end ng-repeat='sel in item.custom').customization
        span.badge {{ sel.price | currency : "&#8377 " }}
        .customization-selection
          | {{ sel.name }}
